{
  "name": "node-typescript-starter",
  "version": "0.0.1",
  "description": "A starter for node and typescript",
  "scripts": {
    "start": "npm run build && node dist/server.js",
    "start:dev": "nodemon -e ts --watch src --exec 'npm run build && node $NODE_DEBUG_OPTION ./dist/server.js'",
    "build": "tsc",
    "test:unit": "jest",
    "test:unit:coverage": "npm run test:unit -- --coverage",
    "test:unit:coveralls": "npm run test:unit:coverage | coveralls",
    "test:int": "env JEST_JUNIT_OUTPUT_DIR=./tests/reports/int jest --testMatch  **/*.test.int.ts --runInBand",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^7.4.2",
    "correlation-id": "^3.1.0",
    "dotenv-safe": "^6.1.0",
    "koa": "^2.7.0",
    "koa-cors": "0.0.16",
    "koa-helmet": "^4.1.0",
    "koa-router": "^7.4.0",
    "source-map-support": "^0.5.12"
  },
  "devDependencies": {
    "@types/correlation-id": "^2.1.0",
    "@types/dotenv-safe": "^5.0.3",
    "@types/hapi__boom": "^7.4.0",
    "@types/jest": "^24.0.13",
    "@types/koa": "^2.0.48",
    "@types/koa-cors": "0.0.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.40",
    "@types/node": "^12.0.3",
    "coveralls": "^3.0.4",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "nodemon": "^1.19.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-airbnb-base": "^0.3.0",
    "typescript": "^3.5.1"
  },
  "jest-junit": {
    "outputDirectory": "./tests/reports/unit"
  }
}
